<%= link_to "Back", :back %>

<section class="login-section">
  <div class="login-page">
    <div class="form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <h2>Edit <%= resource_name.to_s.humanize %></h2></br>

        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
        
        <% if @user.has_role? :Professional %>
          <%= f.text_field :firmname, placeholder: "Firm/Company Name", required: true %>
        <% elsif @user.has_role? :Client %>
          <%= f.text_field :username, placeholder: "Firm/Company Name", required: true %>
        <% end %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>

        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>

        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", placeholder: "Current Password" %>

        <div class="actions">
          <%= f.submit "Update Authentication", class: "submit-action" %>
        </div>
      <% end %>

      <h3>Cancel my account</h3>
      <p class="message">Not happy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn-danger btn-cancel" %></p>
    </div>
  </div>
</section>